    <div class="jumbotron jumbotron-fluid">
        <div class="container text-center">
            <h1 class="display-4">Register</h1>

        </div>
    </div>
    <div class="container">
        <form action="/accounts/register" method="post">
            <div class="row">
                <div class="col col-md-4 mx-auto">
