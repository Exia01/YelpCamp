<% include ../partials/header %>

<div class="jumbotron jumbotron-fluid ">
    <section class=" d-flex flex-column align-items-center">
        <h1 class="display-5">Welcome to YelpCamp!</h1>
        <p>View our hand-picked campgrounds!</p>
        <div class="container">
            <hr class="w-100">
        </div>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add Campground</a>
    </section>
</div>
<div class="container">
    <% if (campgrounds !== undefined ){%>
    <div class="row d-flex justify-content-center">
        <% campgrounds.forEach(site =>{ %>
        <div class="col-sm-6 col-md-4 col-lg-4">
            <div class="card my-2">
                <img src="<%= site.image %>" class="card-img-top" alt="...">
                <div class="card-body d-flex flex-column align-items-center">
                    <h5 class="card-title"><%= site.name %></h5>
                    <p class="card-text text-center">Some quick example text to build on the card title and make up the bulk of the
                        card's content.</p>
                    <a href="/campgrounds/<%= site._id %>" class="btn btn-info w-100">More info</a>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
    <% } %>
</div>


<% include ../partials/footer %>
