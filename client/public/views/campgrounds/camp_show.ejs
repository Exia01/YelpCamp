<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
                <li class="list-group-item">Info 4</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card mb-3">
                <img src="<%=campground.image%>" class="card-img-top" alt="Picture of<%=campground.name%>">
                <div class="card-body">
                        <div class="py-0 d-flex">
                            <h4 class="card-title d-inline"><a href=""><%=campground.name%></a> </h4>
                            <h4 class="card-title d-inline ml-auto">$<%=campground.price%>/Night</h4>
                        </div>
                        <p class="card-text"><%=campground.description%></p>
                        <%if(campground.author.id){%>
                            <%if(currentUser &&campground.author.id.equals(currentUser._id)){%>
                                <a class="btn btn-sm btn-info" href="<%=campground.id%>/edit">Edit</a> |
                                <form class="d-inline" action="/campgrounds/<%=campground._id%>/delete?_method=DELETE" method="POST">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            <%}%>
                        <%}%>
                        <% if(campground.createdAt && campground.author.username){ %>
                            <p class="card-text"><small class="text-muted">Posted <%= campground.createdAt.toDateString()%> by <span><%= campground.author.username %></span></small></p>
                        <%}%>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-body bg-light">
                    <h5 class="card-title"></h5>
                    <p class="text-right"><a class="btn btn-info" href="<%=campground.id%>/comments/new">Leave review</a></p>
                    <hr>
                    <% if (campground.comments){%>
                        <% campground.comments.forEach(comment =>{%>
                        <div class="row">
                            <div class="col-md-12 py-2">
                                <div class="py-0 d-flex">
                                    <strong class="d-inline"><%=comment.author.username%></strong>
                                    <span class=" d-inline ml-auto">10 days ago</span>
                                </div>
                                <p class="card-text"><%= comment.text %></p>
                                <%if (currentUser &&comment.author.id.equals(currentUser._id)) { %>
                                    <a class="btn btn-sm btn-warning"href="/campgrounds/<%=campground.id%>/comments/<%=comment.id%>/edit">edit</a>
                                    <form class="d-inline" action="/campgrounds/<%=campground.id%>/comments/<%=comment.id%>/delete?_method=DELETE" method="POST">
                                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                <% }%>
                            </div>
                        </div>
                        <% })%>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>