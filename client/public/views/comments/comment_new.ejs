<% include ../partials/header %>

<section>

    <div class="jumbotron jumbotron-fluid">
        <div class="container text-center">
            <h1 class="display-4">Add Comment to <%= campground.name %></h1>
        </div>
    </div>
    <div class="container my-4">

        <div class="row">
            <div class="col-sm-10 col-md-6 col-lg-5 mx-auto">
                <div class="col-8 col-sm-10 mx-auto">
                    <img src=<%=campground.image%> class="img-fluid rounded" alt="...">

                </div>
                <form action="/campgrounds/<%= campground.id %>/comments/new" method="POST">
                    <div class="form-group">
                        <label for="Text">Comment</label>
                        <textarea type="text" class="form-control" name="comment[text]" id="" aria-describedby=""
                            placeholder=""></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary ml-auto">Add Comment</button>
                </form>
            </div>
        </div>
    </div>
    <div class="container">
        <p class="">
            <a class="btn btn-link px-1 py-0 mb-1" href="/campgrounds/<%= campground.id %>" role="button">
                Back to campground
            </a>
        </p>
        <div>
</section>


<% include ../partials/footer %>
