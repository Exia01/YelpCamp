<% include ../partials/header %>

    <section>
        <div class="container my-4">
            <h1 class="text-center my-2 mb-3">Add New Comment to <%= campground.name %></h1>
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-sm-10 col-md-6 col-lg-5">
                    <form action="/campgrounds/<%= campground.id %>/comments/new" method="POST">
                        <div class="form-group">
                            <label for="Text">Text</label>
                            <input type="text" class="form-control" name="comment[text]" id="" aria-describedby="" placeholder="Text">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Add Comment</button>
                    </form>
                    <a href="/campgrounds">Go Back</a>
                </div>
            </div>
        </div>
    </section>
       

<% include ../partials/footer %>
